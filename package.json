{
    "name": "pc-nrfconnect-dtm",
    "version": "2.0.3",
    "displayName": "Direct Test Mode",
    "description": "RF PHY testing of Bluetooth Low Energy devices",
    "homepage": "https://github.com/NordicSemiconductor/pc-nrfconnect-dtm",
    "repository": {
        "type": "git",
