        "jest": "^27.5.1",
        "nrf-dtm-js": "https://github.com/NordicPlayground/nrf-dtm-js",
        "pc-nrfconnect-shared": "git+https://github.com/NordicSemiconductor/pc-nrfconnect-shared.git#v6.6.1",
        "react-chartjs-2": "^2.7.6"
    },
    "dependencies": {},
    "eslintConfig": {
